@page
@model Parking.Mqtt.Api.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MqttServerConfiguration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MqttServerConfiguration.Id" />
            <div class="form-group">
                <label asp-for="MqttServerConfiguration.Name" class="control-label"></label>
                <input asp-for="MqttServerConfiguration.Name" class="form-control" />
                <span asp-validation-for="MqttServerConfiguration.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MqttServerConfiguration.TcpServer" class="control-label"></label>
                <input asp-for="MqttServerConfiguration.TcpServer" class="form-control" />
                <span asp-validation-for="MqttServerConfiguration.TcpServer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MqttServerConfiguration.Port" class="control-label"></label>
                <input asp-for="MqttServerConfiguration.Port" class="form-control" />
                <span asp-validation-for="MqttServerConfiguration.Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MqttServerConfiguration.Username" class="control-label"></label>
                <input asp-for="MqttServerConfiguration.Username" class="form-control" />
                <span asp-validation-for="MqttServerConfiguration.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MqttServerConfiguration.Password" class="control-label"></label>
                <input asp-for="MqttServerConfiguration.Password" class="form-control" />
                <span asp-validation-for="MqttServerConfiguration.Password" class="text-danger"></span>
            </div>
